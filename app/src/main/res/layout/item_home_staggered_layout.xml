<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_staggered_item"
              android:layout_width="match_parent"
              android:layout_height="300dp"
              android:background="@drawable/border_bg"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_stagger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_staggered_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/tv_staggered_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lines="2"
            android:text="阿达大的阿大声道阿达阿达阿达阿达"/>

        <TextView
            android:id="@+id/tv_staggered_factory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lines="1"
            android:text="阿达大的阿大声道阿达阿达阿达阿达"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_staggered_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lines="1"
            android:text="阿达大的阿大声道阿达阿达阿达阿达"
            android:textColor="@color/main_color"
            android:textSize="12sp"/>
    </LinearLayout>


</LinearLayout>
